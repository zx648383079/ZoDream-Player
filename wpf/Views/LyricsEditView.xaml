<Window x:Class="ZoDream.Player.Views.LyricsEditView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZoDream.Player.Views"
        mc:Ignorable="d"
        Title="歌词编辑" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="OpenBtn" Content="打开" Click="OpenBtn_Click"/>
            <Button x:Name="BeginBtn" Content="[" Width="40" Click="BeginBtn_Click"/>
            <Button x:Name="EndBtn" Content="]" Width="40" Click="EndBtn_Click"/>
            <Button x:Name="SaveBtn" Content="保存"/>
        </StackPanel>
        <TextBox x:Name="ContentTb" TextWrapping="Wrap" Grid.Row="1" 
                 AcceptsReturn="True" Drop="ContentTb_Drop" DragEnter="ContentTb_DragEnter"/>
    </Grid>
</Window>
