<UserControl x:Class="ZoDream.Player.Controls.LyricsLine"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ZoDream.Player.Controls"
             x:Name="root"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBlock Text="{Binding Source.Text,ElementName=root}" FontSize="{Binding FontSize,ElementName=root}">
            <TextBlock.Foreground>
                <LinearGradientBrush>
                    <GradientStop Color="{Binding Outline,ElementName=root}"></GradientStop>
                    <GradientStop Offset="{Binding Offset,ElementName=root}" Color="{Binding Outline,ElementName=root}"></GradientStop>
                    <GradientStop Offset="{Binding Offset,ElementName=root}" Color="{Binding Inline,ElementName=root}"></GradientStop>
                    <GradientStop Color="{Binding Inline,ElementName=root}" Offset="1"></GradientStop>
                </LinearGradientBrush>
            </TextBlock.Foreground>
        </TextBlock>
    </Grid>
</UserControl>
